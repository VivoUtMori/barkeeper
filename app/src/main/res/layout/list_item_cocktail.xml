<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borders_for_linearlayout"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rellayout_of_listitem_cocktail"
        android:layout_width="fill_parent"
        android:layout_height="92dp">

        <TextView
            android:id="@+id/item_textview_cocktail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:text="Cocktailname"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_textview_cocktail_ingredients"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/item_textview_cocktail"
            android:layout_alignLeft="@+id/item_textview_cocktail"
            android:layout_marginBottom="19dp"
            android:maxLines="2"
            android:maxWidth="232dp"
            android:text="Gin, basil, Lemon juice, Sugar white, Lemon fruit" />


        <ImageView
            android:id="@+id/imageview_listitem_cocktail"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:srcCompat="@drawable/standard" />


    </RelativeLayout>

</LinearLayout>