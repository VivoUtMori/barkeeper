<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/content_textview_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_avaible_cocktails"
        app:layout_constraintBottom_toTopOf="@+id/content_recyclerview_results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/content_avaible_cocktails" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_recyclerview_results"
        android:layout_width="368dp"
        android:layout_height="442dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_textview_result"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbarSize="9dp"
        android:orientation="vertical"
        android:scrollbarStyle="outsideInset" />
</android.support.constraint.ConstraintLayout>